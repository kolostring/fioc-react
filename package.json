{
  "name": "fioc-react",
  "version": "1.3.9",
  "type": "module",
  "license": "MIT",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "keywords": [
    "react",
    "dependency injection",
    "functional dependency injection",
    "di container",
    "typescript",
    "ioc"
  ],
  "description": "A lightweight and type-safe dependency injection library for React, designed to simplify dependency management with hooks and context providers.",
  "author": "kolostring <yoerodriguezjunior@gmail.com>",
  "contributors": [
    "leonardof02 <leonardoarencibia2002@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kolostring/fioc-react.git"
  },
  "scripts": {
    "build": "tsup",
    "release": "tsup && npm publish --access public",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint ."
  },
  "dependencies": {
    "fioc": "^1.4.0",
    "immer": "^10.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  }
}
